{
    "name": "IOWarp Core",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "workspaceFolder": "/workspace",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    "containerEnv": {
        "IOWARP_CORE_ROOT": "${localWorkspaceFolder}",
        "CONDA_DEFAULT_ENV": "base",
        "CONDA_AUTO_ACTIVATE_BASE": "true",
        "CUDA_HOME": "/usr/local/cuda-12.6",
        "NVIDIA_VISIBLE_DEVICES": "all",
        "NVIDIA_DRIVER_CAPABILITIES": "compute,utility",
        "ASAN_OPTIONS": "protect_shadow_gap=0"
    },
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "runArgs": [
        "--privileged",
        "--shm-size=2gb",
        "--gpus=all"
    ],
    // NOTE: If container fails to start with GPU error, run on host:
    //   sudo apt-get install -y nvidia-container-toolkit
    //   sudo nvidia-ctk runtime configure --runtime=docker
    //   sudo systemctl restart docker
    // Then rebuild the devcontainer.
    "customizations": {
        "vscode": {
            "extensions": [
                "anthropic.claude-code",
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "KylinIdeTeam.cppdebug",
                "llvm-vs-code-extensions.vscode-clangd",
                "ms-vscode.cmake-tools",
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "nvidia.nsight-vscode-edition"
            ],
            "settings": {
                "cmake.configureOnOpen": false,
                "python.defaultInterpreterPath": "/home/iowarp/miniconda3/bin/python",
                "python.terminal.activateEnvironment": true,
                "python.venvPath": "/home/iowarp",
                "python.condaPath": "/home/iowarp/miniconda3/bin/conda",
                "python.formatting.provider": "black",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": false,
                "python.linting.flake8Enabled": true
            }
        }
    },
    "postCreateCommand": "bash -c 'git config --global --add safe.directory /workspace && sudo chmod 666 /var/run/docker.sock && sudo service ssh start && eval \"$(~/miniconda3/bin/conda shell.bash hook)\" && echo \"Dev container ready!\"'",
    "remoteUser": "iowarp"
}